<div class="wrapper-game">
  <div class="container-game text-center">
    <h1>Word race</h1>
    <div class="letter-list">
      <ul class="list-inline">
        <% @letter_grid.each do |letter| %>
          <li class="letter-instance"><%= letter %></li>
        <% end %>
      </ul>
    </div>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letter_grid %>
      <%= hidden_field_tag :start_time_post, @start_time_now %>
      <input type="text" name="word" placeholder="Enter your best guess. Quickly!" id="word-guess" autofocus>
    </form>
  </div>
</div>
